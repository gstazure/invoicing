<%= form_for(@expense) do |f| %>
  <div class="form-group label-floating <%= "has-error" if @expense.errors.has_key?(:description) %>">
    <%= f.label :description, class: 'control-label' %>
    <%= f.text_field :description, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group label-floating <%= "has-error" if @expense.errors.has_key?(:value) %>">
    <%= f.label :value, class: 'control-label' %>
    <%= f.number_field :value, class: 'form-control', step: 0.01, min: 0.01 %>
  </div>
  <div class="form-group label-floating">
    <% @currencies.each do |currency| %>
      <div class="radio">
        <label>
          <%= f.radio_button("currency_id", currency.id.to_s) %>
          <%= "#{currency.symbol} #{currency.code}" %>
        </label>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <div class="checkbox">
    <label>
      <%= f.check_box :includes_gst %>
      Includes GST?
    </label>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, class: 'control-label' %>
    <%= f.date_field :date, class: 'form-control' %>
  </div>
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
