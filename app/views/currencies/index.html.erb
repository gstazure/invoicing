<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header" data-background-color="orange">
          <div class="row">
            <div class="col-lg-6">
              <h4 class="title">Currencies and Conversions rates</h4>
              <p class="category">List of all currencies and conversion rates</p>
            </div>
            <div class="col-lg-6 text-right">
              <a href="<%= new_currency_path %>" title="Add currency" class="text-muted"><i class="material-icons">note_add</i></a>
            </div>
          </div>
        </div>
        <div class="card-content table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Code</th>
                <th class="text-right">Symbol</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @currencies.each do |currency| %>
                <tr>
                  <td class="text-warning"><%= currency.name %></td>
                  <td><%= currency.code %></td>
                  <td class="text-right"><%= currency.symbol %></td>
                  <td class="text-right"><a href="<%= new_currency_conversion_rate_path(currency) %>"><i class="material-icons">note_add</i> <a href="<%= edit_currency_path(currency) %>" title="Edit"><i class="material-icons">mode_edit</i></a> <a href="<%= currency_path(currency) %>" data-method="delete" data-confirm="Are you sure?" title="Delete"><i class="material-icons">delete</i></a></td>
                </tr>
                <% currency.conversion_rates.order(:valid_from).each do |rate| %>
                  <tr>
                    <td></td>
                    <td><%= rate.valid_from %> to <%= rate.valid_to %></td>
                    <td class="text-right"><%= rate.rate.to_f %></td>
                    <td class="text-right"><a href="<%= edit_currency_conversion_rate_path(currency, rate) %>" title="Edit"><i class="material-icons">mode_edit</i></a> <a href="<%= currency_conversion_rate_path(currency, rate) %>" data-method="delete" data-confirm="Are you sure?" title="Delete"><i class="material-icons">delete</i></a></td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
