<%= form_for(@currency) do |f| %>
  <div class="form-group label-floating <%= "has-error" if @currency.errors.has_key?(:name) %>">
    <%= f.label :name, class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group label-floating <%= "has-error" if @currency.errors.has_key?(:code) %>">
    <%= f.label :code, class: 'control-label' %>
    <%= f.text_field :code, class: 'form-control' %>
  </div>
  <div class="form-group label-floating <%= "has-error" if @currency.errors.has_key?(:symbol) %>">
    <%= f.label :symbol, class: 'control-label' %>
    <%= f.text_field :symbol, class: 'form-control' %>
  </div>
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
