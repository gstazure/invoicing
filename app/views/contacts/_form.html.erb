<%= form_for([@client, @contact]) do |f| %>
  <div class="form-group label-floating <%= "has-error" if @contact.errors.has_key?(:name) %>">
    <%= f.label :name, class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group label-floating <%= "has-error" if @contact.errors.has_key?(:position) %>">
    <%= f.label :position, class: 'control-label' %>
    <%= f.text_field :position, class: 'form-control' %>
  </div>
  <div class="form-group label-floating <%= "has-error" if @contact.errors.has_key?(:email) %>">
    <%= f.label :email, class: 'control-label' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
